<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.janbrus.damian.pokladna.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:orientation="vertical">

    <TextView
        android:id="@+id/productsProgressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading products"
        android:layout_margin="16dp"
        android:textSize="24dp"/>
    <ProgressBar
        android:id="@+id/productsProgress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_margin="16dp"/>
    <TextView
        android:id="@+id/certProgressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading certificate"
        android:layout_margin="16dp"
        android:textSize="24dp"/>
    <ProgressBar
        android:id="@+id/certProgress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_margin="16dp"/>
    <Button
        android:id="@+id/butCashRegister"
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Go to Cash Register"
        android:padding="18dp"
        android:textSize="20dp"
        android:background="@color/colorAccent"
        style="@style/AppTheme.RoundedCornerMaterialButton"
        />

</LinearLayout>
